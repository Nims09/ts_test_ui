callUpdate = function(id) {
	if (id) {
		console.log("tic")
		$.ajax({
			type: "PUT",
			url: "/simulations/" + id
		});
	} else {
		console.log("Update error, no id passed.")
	}
	$('#sim_div').html("<%= j (render @simulation) %>");

	setTimeout( function() {
		callUpdate(id)
	}, 5000);
};

setTimeout( function() {
	callUpdate("<%= @simulation.id %>")
}, 5000);